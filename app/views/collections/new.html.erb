<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="d-flex justify-content-between align-items-center">
        <div class="text-center flex-grow-1 margin_text">
          <h2>New collection</h2>
        </div>
        <div>
        <%= link_to 'Go Back', collections_path, class: 'btn color_button_brown fw-semibold' %>
        </div>
      </div>

      <% if @collection.errors.any? %>
        <div id="error" class="text-danger mb-3 text-center">
          <% @collection.errors.full_messages.each do |message| %>
            <p class="pb-2 fw-semibold"><%= message %></p> 
          <% end %>     
        </div>       
      <% end %>

      <%= render 'form', collection: @collection %>
      
    </div>
  </div>
</div>