<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="container text-center">
        <div class="row">
          <div class="col-auto me-auto">
            <%= link_to 'Edit',edit_admin_collection_path(@collection), class: 'btn color_button_green fw-semibold mb-3' %>
            <button onclick="deleteCollection(true,'<%= @collection.id %>')" class="btn color_button_brown fw-semibold mb-3 ms-2">Delete</button>
          </div>
          <div class="col-auto">
            <%= link_to 'Go Back', admin_collections_path, class: 'btn color_button_brown fw-semibold' %>
          </div>
        </div>
      </div>

      <p><strong>Title: </strong> <%= @collection.name %></p>
      <p><strong>Notes: </strong><%= "#{@collection.notes&.length || 0} associated." %></p>
      <p><strong>Created At: </strong> <%= @collection.created_at %></p>
      <p><strong>Updated At: </strong> <%= @collection.updated_at %></p>
  
    </div>
  </div>
</div>