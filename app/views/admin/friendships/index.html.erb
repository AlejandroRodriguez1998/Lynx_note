<h1 class="ms-2">Friendships</h1>

<% if notice %>
    <div class="alert alert-success alert-dismissible fade show mx-2 my-3" role="alert">
        <strong>Correct!</strong> <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" id="botonCerrar"></button>
    </div>

    <script>
        setTimeout(() => { document.getElementById('botonCerrar').click(); }, 3500);       
    </script>
<% end %>

<div class="row m-0 p-0">
  <div class="col-12">
    <%= link_to 'New Frienship', new_admin_friendship_path, class: 'btn color_button_green fw-semibold mb-3' %>
    <table class="table color_card">
      <thead>
        <tr>
          <th scope="col">Friend 1</th>
          <th scope="col">Friend 2</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friendships.each do |friend| %>
          <tr>
            <td><%= friend[:user].email %></td>
            <td><%= friend[:friend].email %></td>
            <td><%= friend[:status] %></td>
            <td>
              <%= link_to 'Show', admin_friendship_path(friend[:id]), class: 'btn color_button_green fw-semibold mx-1' %>
              <button onclick="createToastDelete('friendship',true,'<%= friend[:id] %>')" class="btn color_button_brown fw-semibold mx-1">Delete</button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

