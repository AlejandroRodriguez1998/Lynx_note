                    <div class="card-body text-center">
                        <img class="card-img-top imgAdmin" alt="citas" src="<%= asset_path 'relationships.png' %>">
                        <h5 class="card-text m-3"><a href="<%= admin_friendships_path %>">Friendships</a></h5>
