<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="container text-center">
        <div class="row">
          <div class="col-auto me-auto">
            <%= link_to 'Edit',edit_admin_user_path(@user), class: 'btn color_button_green fw-semibold mb-3' %>
            <button onclick="createToastDelete('user',true,'<%= @user.id %>')" class="btn color_button_brown fw-semibold mb-3 ms-2">Delete</button>
          </div>
          <div class="col-auto">
            <%= link_to 'Go Back', admin_users_path, class: 'btn color_button_brown fw-semibold' %>
          </div>
        </div>
      </div>

      <p><strong>Name:</strong> <%= @user.name %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Password:</strong> <%= @user.password.present? ? "Yes" : "No" %></p>
      <p><strong>Role:</strong> <%= @user.role %></p>
      <p><strong>Created At: </strong> <%= @user.created_at %></p>
      <p><strong>Updated At: </strong> <%= @user.updated_at %></p>
      
    </div>
  </div>
</div>