<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="d-flex justify-content-between align-items-center">
        <div class="text-center flex-grow-1 margin_text">
          <h2>New Friend</h2>
        </div>
        <div>
        <%= link_to 'Go Back', friendships_path, class: 'btn color_button_brown fw-semibold' %>
        </div>
      </div>

      <% flash.each do |type, message| %>
        <% if type == 'alert' %>
          <div id="error" class="text-danger mb-2 text-center">
              <p class="pb-2 fw-semibold"><%= message %></p>
          </div>    
        <% end %>    
      <% end %>

      <% if notice %>
        <div id="error" class="text-danger mb-2 text-center">
          <p class="pb-2 fw-semibold"><%= notice %></p>
        </div>   
      <% end %>

      <div class="text-center">
        <%= render "form", friendship: @friendship, users: @users %>
      </div>

    </div>
  </div>
</div>