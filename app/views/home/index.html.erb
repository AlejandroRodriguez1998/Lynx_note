<% if notice %>   
    <script>
        createToast("<%= notice %>")
    </script>
<% end %>

<button type="button" class="d-none" data-bs-toggle="modal" data-bs-target="#modalNotice" id="modal_button_notice"></button>

<div class="modal fade" id="modalNotice" tabindex="-1" aria-labelledby="modalNoticeLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="alert alert-success alert-dismissible fade show m-0">
                <label class="modal-title fs-5" id="modalNoticeLabel" id="notice"></label> 
                <button type="button" class="btn-close mt-1" data-bs-dismiss="modal" aria-label="Close" id="botonCerrar"></button>
            </div>
        </div>
    </div>
</div>

