<% if notice %>
    <div class="alert alert-success alert-dismissible fade show mx-2 my-3" role="alert">
        <strong>Correct!</strong> <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" id="botonCerrar"></button>
    </div>

    <script>
        setTimeout(() => { document.getElementById('botonCerrar').click(); }, 5000);
    </script>
<% end %>

<div class="container mt-2 mb-5">
    <h2 class="text-center mb-3">Profile</h2>
    <div class="row border rounded justify-content-center w-50 m-auto color_card box-shadow">
        <div class="d-block text-center m-auto">
            <img class="d-inline mt-3" alt="" height="135px" width="135px" src="<%= asset_path 'usuario.png' %>">
        </div>
        <div class="d-block card-body p-3 mt-4">
            <div class="profile-info">
                <div class="form-group">
                    <label class="fw-semibold">Name:</label>
                    <span class="form-control underline" disabled><%= @user.name %></span>
                </div>
                <div class="form-group">
                    <label class="fw-semibold">Email:</label>
                    <span class="form-control underline" disabled><%= @user.email %></span>
                </div>
                
            </div>
    
            <div class="d-flex justify-content-center">
                <%= link_to "Edit", edit_user_path(@user), class: "btn color_button_green fw-semibold mb-3 ms-2" %>
                <button onclick="createToastDelete('user', false,'<%= @user.id %>')" class="btn color_button_brown fw-semibold mb-3 ms-2">Delete</button>
            </div>   
            
        </div>
    </div>
</div>